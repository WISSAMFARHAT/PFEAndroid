        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginRight="90dp"
        android:textSize="45dp"
        android:layout_marginLeft="60dp"
        android:textAlignment="center"
        android:text="10:00:00" />
</RelativeLayout>