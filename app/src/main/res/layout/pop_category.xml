<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="305dp"
    android:background="#fff"
    android:padding="5dp"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        tools:ignore="InvalidId" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TableRow
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#000"></TableRow>

        <CheckBox
            android:id="@+id/Games"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Games" />

        <CheckBox
            android:id="@+id/News"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="News" />

        <CheckBox
            android:id="@+id/Productive"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-31dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Productive" />

        <CheckBox
            android:id="@+id/SocialMedia"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="SocialMedia" />

        <CheckBox
            android:id="@+id/Undifiend"
            android:layout_width="100dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-30dp"
            android:layout_height="wrap_content"
            android:text="Undifiend" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Gategory" />


    </LinearLayout>
</LinearLayout>