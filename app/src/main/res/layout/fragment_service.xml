<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="260dp"
    android:layout_height="50dp"
    android:text="Service On/Off"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:textSize="30dp"
    ></TextView>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/service_on_off"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:checked="true"
        android:layout_marginTop="10dp"></androidx.appcompat.widget.SwitchCompat>

    <ImageView
        android:id="@+id/icon_app1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:src="@color/colorPrimaryDark"
        >
    </ImageView>
    <TextView
        android:id="@+id/name_app1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:text="Name App">

    </TextView>
    <TextView
        android:id="@+id/time_app1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="100dp"
        android:text="2 Hours"
        android:textSize="25dp"
        ></TextView>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/on_off_app1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="230dp"
        android:checked="true"
        ></androidx.appcompat.widget.SwitchCompat>





    <ImageView
        android:id="@+id/icon_app2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="30dp"
        android:src="@color/colorPrimaryDark"
        >
    </ImageView>
    <TextView
        android:id="@+id/name_app2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="200dp"
        android:text="Name App">
    </TextView>
    <TextView
        android:id="@+id/time_app2"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="100dp"
        android:text="2 Hours"
        android:textSize="25dp"
        ></TextView>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/on_off_app2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="230dp"
        android:checked="true"
        ></androidx.appcompat.widget.SwitchCompat>



</RelativeLayout>