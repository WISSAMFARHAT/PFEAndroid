<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="385dp"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Track time Made to help track and analyze time We hope you enjoy it!"
        ></TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="226dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_menu_email"
        ></TextView>
    <TextView
        android:id="@+id/contact_write"
        android:layout_width="345dp"
        android:layout_height="110dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        android:textSize="20dp"
        android:text="Write us if you have any other question or issue
with Tracking Time"
        ></TextView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="326dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/ic_action_replay"
        ></TextView>

    <TextView
        android:id="@+id/replay"
        android:layout_width="345dp"
        android:layout_height="110dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="360dp"
        android:textSize="20dp"
        android:text="Replay the tutorial"
        ></TextView>
</RelativeLayout>