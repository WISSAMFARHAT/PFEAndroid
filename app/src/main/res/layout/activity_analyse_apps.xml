<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/statics"
                    android:layout_width="320dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="1dp"
                    card_view:cardUseCompatPadding="false"
                    >

                    <com.github.mikephil.charting.charts.BarChart

                        android:id="@+id/barchart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.github.mikephil.charting.charts.BarChart>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_insert_chart_black_24dp"
                        android:paddingLeft="15dp"

                        android:text="My last  7 days"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/View1"
                    android:layout_width="320dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="380dp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="15dp"
                    card_view:cardUseCompatPadding="false"
                    app:cardElevation="1dp">

                    <TextView
                        android:id="@+id/MyApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My App"
                        android:drawableLeft="@drawable/ic_smartphone_black_24dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"

                        ></TextView>

                   <TextView
                       android:layout_width="120dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="50dp"
                       android:paddingLeft="20dp"
                       android:text="Top Time Day : "
                       android:textColor="@color/colorAccent"
                       />

                    <TextView
                        android:id="@+id/Top"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="47dp"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="120dp"
                        android:text="0 "
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="100dp"
                        android:paddingLeft="20dp"
                        android:text="Low Time Day : "
                        android:textColor="@color/colorAccent"
                        />

                    <TextView
                        android:id="@+id/Low"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="97dp"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="120dp"
                        android:text="0 "
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimary"
                        />


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="150dp"
                        android:paddingLeft="20dp"
                        android:text="Average  : "
                        android:textColor="@color/colorAccent"
                        />

                    <TextView
                        android:id="@+id/Avverage"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="147dp"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="120dp"
                        android:text="0 "
                        android:textSize="17sp"
                        android:textColor="@color/colorPrimary"

                        />


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="660dp"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>