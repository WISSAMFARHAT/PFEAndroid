<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/steps"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"

                card_view:cardUseCompatPadding="false"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_directions"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="Daily steps "
                    android:textSize="15dp"
                    ></TextView>
                <TextView
                    android:id="@+id/km"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:drawableStart="@drawable/ic_straighten"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:text=" 0 Km"
                    android:textSize="15dp"
                    ></TextView>
                <TextView
                    android:id="@+id/kcal"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="100dp"
                    android:drawableStart="@drawable/ic_whatshot"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="200dp"
                    android:text=" 0 Kcal "
                    android:textSize="15dp"
                    ></TextView>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/stepscount"
                    android:layout_marginTop="30dp"
                    android:layout_width="200dp"
                    android:layout_height="160dp" />
            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/statics"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="15dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        card_view:cardUseCompatPadding="false"
        >

        <com.github.mikephil.charting.charts.BarChart

            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.github.mikephil.charting.charts.BarChart>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_insert_chart_black_24dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="My last days"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/View1"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginTop="560dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="15dp"
        card_view:cardUseCompatPadding="false"
        app:cardElevation="1dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My phone usage today"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            ></TextView>

        <ListView
            android:id="@+id/pkg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:drawSelectorOnTop="false" />


    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>